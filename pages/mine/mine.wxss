/* pages/mine/mine.wxss */

page {
  background: #f7f7f7;
}

.user-head {
  position: relative;
  top: 0;
  height: 369rpx;
  width: 100%;
}

.user-head-bg {
  height: 498rpx;
  width: 100%;
  filter: blur(14px);
}

.user-head-bg-box {
  height: 369rpx;
  width: 100%;
  overflow: hidden;
}

.user-head-info {
  position: absolute;
  top: 72rpx;
  width: 100%;
  text-align: center;
}

.user-head-logo {
  height: 144rpx;
  width: 144rpx;
  border-radius: 50%;
  /* border: 1px solid #fff; */
}

.user-head-name {
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}

.user-nav-center {
  display: flex;
  height: 180rpx;
  background: #fff;
  box-shadow:0px 2px 2px rgba(173, 173, 173, 0.2);
}

.user-nav-flx {
  flex: 1;
  text-align: center;
}

.user-nav-flx image {
  width: 41rpx;
  height: 54rpx;
  margin-top: 40rpx;
}

.user-nav-flx text {
  font-size: 28rpx;
}

.user-nav-bottom1 {
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
  font-size: 32rpx;
}

.user-nav-bottom1 .image_icon {
  width: 74rpx;
  height: 33rpx;
  position:absolute;
  top:33rpx;
}
.user-nav-bottom1 .image_more {
  width: 74rpx;
  height: 33rpx;
  position:absolute;
  top:33rpx;
  right: 0;
}
.user-nav-bottom1 text{
  margin-left:80rpx;

}
.user-nav-hit {
  height: 100rpx;
  line-height: 100rpx;
  position:relative;
}

.nav-line {
  height: 1rpx;
  width: 670rpx;
  margin-left: 80rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
