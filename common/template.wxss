.listNews .listTitle {
  display: flex;
  height: 100rpx;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: flex-end;
}

.listNews .listTitle .listText {
  display: flex;
  align-items: flex-end;
  height: 100rpx;
  line-height: 90rpx;
  margin-left: 20rpx;
}

.listNews .listTitle .listText:before {
